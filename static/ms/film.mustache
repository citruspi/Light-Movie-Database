<div class="large-3 columns">

    <a class="th" href="#">
        <img src="{{poster_path}}">
    </a>

    <br><br><br>

    <table width="100%">

        <tbody>

            <tr>

                <td><strong>Status</strong></td>
                <td>{{status}}</td>

            </tr>

            <tr>

                <td><strong>Runtime</strong></td>
                <td id="runtime">{{runtime}} min</td>

            </tr>

            <tr>

                <td><strong>Release Date</strong></td>
                <td id="release_date">{{release_date}}</td>

            </tr>

            <tr>

                <td><strong>Budge (USD)</strong></td>
                <td id="release_date">{{budget}}</td>

            </tr>

            <tr>

                <td><strong>Revenue (USD)</strong></td>
                <td id="release_date">{{revenue}}</td>

            </tr>

        </tbody>

    </table>

</div>

<div class="large-9 columns">

    <h2>{{title}}</h2>
    <h4 class="subheader">{{tagline}}</h4>

    <br>

    <h5 class="subheader" id="overview">Overview</h4>

    <hr>

    <p>{{overview}}</p>

    <h5 class="subheader" id="cast">Cast</h5>

    <hr>

    <table width="100%">

        <thead>

            <tr>

                <th>Actor</th>
                <th>Character</th>

            </tr>

        </thead>

        <tbody>

            {{#credits.cast}}

                <tr>

                    <td>{{name}}</td>
                    <td>{{character}}</td>

                </tr>

            {{/credits.cast}}

        </tbody>

    </table>

    <h5 class="subheader" id="crew">Crew</h5>

    <hr>

    <table width="100%">

        <thead>

            <tr>

                <th>Name</th>
                <th>Department</th>
                <th>Job</th>

            </tr>

        </thead>

        <tbody>

            {{#credits.crew}}

                <tr>

                    <td>{{name}}</td>
                    <td>{{department}}</td>
                    <td>{{job}}</td>

                </tr>

            {{/credits.crew}}

        </tbody>

    </table>

    <h5 class="subheader" id="trailers">Trailers &amp; Teasers</h2>

    <hr>

    <ul class="orbit-content" data-orbit data-options="animation_speed:99999999999999;">

        {{#trailers.youtube}}

        <li data-orbit-slide="{{name}}">

        <div class="flex-video">
            <iframe src="//www.youtube.com/embed/{{source}}" allowfullscreen="" frameborder="0"></iframe>
        </div>

        </li>

        {{/trailers.youtube}}

    </ul>

</div>
